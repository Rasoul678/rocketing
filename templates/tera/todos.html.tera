{% extends "tera/base" %}

{% block content %}
    <h2 class="center gold">Hier finden Sie alle Todos</h2>
    <div class="grid is-col-min-10">
        {% for todo in todos %}
            <div class="card cell m-1">
                <header class="card-header">
                    <p class="card-header-title">{{ todo.title }}</p>
                </header>
                <div class="card-content p-0 h-7">
                    <div class="content h-full p-3 flex column justify-between">
                        {{ todo.body }}
                        <br />
                        <time datetime="2016-1-1">{{todo.created_at}}</time>
                    </div>
                </div>
                <footer class="card-footer">
                    <a href="/todos/edit/{{todo.id}}" class="card-footer-item teal">Edit</a>
                    <button data-js="complete_{{todo.id}}" class="card-footer-item gold">Done</button>
                    <button data-js="delete_{{todo.id}}" class="card-footer-item has-text-danger">Delete</button>
                </footer>
            </div>
        {% endfor %}
    </div>
{% endblock content %}
{% block script %}
    <script defer src="/js/todos.js"></script>
{% endblock script%}